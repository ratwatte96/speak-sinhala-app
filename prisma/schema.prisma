datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Todo {
  id    Int    @id @default(autoincrement())
  description  String
  done Boolean @default(false)
}

model Permission {
  id    Int    @id @default(autoincrement())
  name  String
}

model Streak {
  id    Int    @id @default(autoincrement())
  current_streak   Int @default(0)
  last_active_date   DateTime
}

model Lives {
  id    Int    @id @default(autoincrement())
  total_lives   Int @default(5)
  last_active_time   DateTime
}

model Quiz {
  id    Int    @id @default(autoincrement())
  question   String
  questions   Question[]
  audio String?
}

model Question {
  id    Int    @id @default(autoincrement())
  phonetic   String
  quiz Quiz @relation(fields: [quizId], references: [id])
  quizId Int 
  correctAnswer   String
  answers  Answer[]
  audio String?
}

model Answer {
  id    Int    @id @default(autoincrement())
  question Question @relation(fields: [questionId], references: [id])
  questionId Int
  buttonLabel   String
  value   String
  sinhala  String?
  audio String?
}